//practical 1 :- A) MERGE SORT B) QUICK SORT
#include<iostream>
#include<bits/stdc++.h>
using namespace std;
void mergesort(int str,int en,int arr[])
{
    cout<<"start="<<str<<" end="<<en<<endl;
    int mid=(str+en)/2;
    if(str!=en)
    {
    mergesort(str,mid,arr);
    mergesort(mid+1,en,arr);
    }
    int temp[en-str+1];
    int current=0,j=str,k=mid+1;
    for(int i=0;i<en-str+1;i++)
    {
        if((j<=mid)&&(k<=en))
        {
          if(arr[j]>arr[k])
          {
             temp[current]=arr[j];
             j++;
             current++;
          }
          else
          {
             temp[current]=arr[k];
             k++;
             current++;
          }
        }
        else if(j>=mid)
        {
            temp[current]=arr[k];
            k++;
            current++;
        }
        else if(k>=en){
            temp[current]=arr[j];
            j++;
            current++;
        }
    }
    for(int i=0;i<en-str+1;i++)
    {
        cout<<"TESTING :- "<<temp[i]<<"\n";
        arr[i]=temp[i];
    }
    cout<<endl;
}
int main()
{
    int size;
    cout<<"enter size of array :- ";
    cin>>size;
    int arr[size];
    cout<<"ENTER ELEMENTS OF THE ARRAY :- ";
    for(int i=0;i<size;i++){
        cin>>arr[i];
    }
    mergesort(0,size-1,arr);
    cout<<"SORTED ARRAY IS :- ";
    for(int i=0;i<size;i++)
    {
        cout<<arr[i]<<" ";
    }
    return 0;
}
